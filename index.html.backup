                <div class="search-filters">
                    <div class="search-bar">
                        <input type="text" id="searchInputPage" class="search-input" 
                               placeholder="搜尋廁所名稱或地址..." aria-label="搜尋廁所">
                        <button class="search-btn" aria-label="搜尋">
                            <i class="fas fa-search" aria-hidden="true"></i>
                        </button>
                    </div>
                    
                    <div class="filters">
                        <div class="filter-group">
                            <label for="typeFilter">廁所類型：</label>
                            <select id="typeFilter" class="filter-select">
                                <option value="">全部</option>
                                <option value="無障礙廁所">無障礙廁所</option>
                                <option value="男廁所">男廁所</option>
                                <option value="女廁所">女廁所</option>
                                <option value="混合廁所">混合廁所</option>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label for="gradeFilter">等級：</label>
                            <select id="gradeFilter" class="filter-select">
                                <option value="">全部</option>
                                <option value="特優級">特優級</option>
                                <option value="優級">優級</option>
                                <option value="良級">良級</option>
                                <option value="普通級">普通級</option>
                                <option value="不合格">不合格</option>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label for="sortBy">排序：</label>
                            <select id="sortBy" class="filter-select">
                                <option value="distance">距離</option>
                                <option value="grade">等級</option>
                                <option value="name">名稱</option>
                            </select>
                        </div>
                    </div>
                </div>
                
                <!-- 搜尋結果 -->
